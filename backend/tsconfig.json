{
  "compilerOptions": {
    "target": "es6",                     
    "module": "commonjs",                
    "strict": false,                     
    "esModuleInterop": true,             
    "skipLibCheck": true,                
    "forceConsistentCasingInFileNames": true, 
    "outDir": "./dist",                  
    "rootDir": "./src",                  
    "moduleResolution": "node",          
    "resolveJsonModule": true,           
    "allowSyntheticDefaultImports": true 
  },
  "include": ["src/**/*.ts"],            
  "exclude": ["node_modules"]            
}
